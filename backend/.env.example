# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/barber-saas

# Docker MongoDB Authentication (only needed for docker-compose)
MONGO_ROOT_USER=barber_root
MONGO_ROOT_PASSWORD=CHANGE_ME_strong_root_password_here
MONGO_APP_PASSWORD=CHANGE_ME_strong_app_password_here

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Production CORS (comma-separated list of allowed domains)
# Example: PRODUCTION_DOMAINS=https://app.tudominio.com,https://www.tudominio.com
PRODUCTION_DOMAINS=

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stripe (Payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourbarber.com

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=12
BACKUP_COMPRESS=true

# Backup Notifications (Optional)
SLACK_BACKUP_WEBHOOK=
BACKUP_EMAIL_NOTIFICATIONS=false

# Monitoring (Sentry)
SENTRY_DSN=
SENTRY_RELEASE=
